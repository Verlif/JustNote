<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="study.verlif.ui.stage.account.edit.AccountEditController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <Label alignment="CENTER" text="用户名">
                <VBox.margin>
                    <Insets bottom="5"/>
                </VBox.margin>
            </Label>
            <TextField fx:id="nameView">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </TextField>
            <Label alignment="CENTER" text="邮箱">
                <VBox.margin>
                    <Insets bottom="5"/>
                </VBox.margin>
            </Label>
            <TextField fx:id="emailView">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </TextField>
            <Label alignment="CENTER" text="签名">
                <VBox.margin>
                    <Insets bottom="5"/>
                </VBox.margin>
            </Label>
            <TextArea fx:id="descView">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </TextArea>
            <BorderPane.margin>
                <Insets topRightBottomLeft="10"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <Button onAction="#save" text="保存"/>
            <Button onAction="#cancel" text="取消"/>
        </ToolBar>
    </bottom>
</BorderPane>
